[Unit]
Description=BFC POS System
Documentation=https://github.com/yourusername/localpos
After=network.target

[Service]
Type=simple
User=nodejs
WorkingDirectory=/var/www/bfcpos
Environment=NODE_ENV=production
Environment=PORT=7000

# PM2 commands - uses wrapper script that loads .env.production
ExecStart=/var/www/bfcpos/start.sh
ExecStop=/home/nodejs/node_modules/.bin/pm2 stop ecosystem.config.cjs
ExecReload=/home/nodejs/node_modules/.bin/pm2 reload ecosystem.config.cjs

# Restart policy
Restart=on-failure
RestartSec=10s

# Resource limits
LimitNOFILE=65536
LimitNPROC=65536

# Security
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target

